<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.3//EN"
        "http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">

<validators>
    <field name="email">
        <field-validator type="requiredstring">
            <message>Please put your email</message>
        </field-validator>
        <field-validator type="email">
            <message>Please input a valid email address</message>
        </field-validator>
    </field>
    <field name="phone">
        <field-validator type="stringlength">
            <param name="minLength">8</param>
            <message>Please input a valid phone number</message>
        </field-validator>
    </field>
    <field name="firstName">
        <field-validator type="requiredstring">
            <message>Please input your first name</message>
        </field-validator>
    </field>
    <field name="lastName">
        <field-validator type="requiredstring">
            <message>Please input your last name</message>
        </field-validator>
    </field>
    <field name="password">
        <field-validator type="requiredstring">
            <message>Please input a password</message>
        </field-validator>
        <field-validator type="stringlength">
            <param name="minLength">6</param>
            <message>Minimum 6 characters</message>
        </field-validator>
    </field>
    <field name="address">
        <field-validator type="requiredstring">
            <message>Please input a address</message>
        </field-validator>
    </field>
</validators>